{
  "key": "it-hurts-app",
  "name": "It Hurts for Bitbucket",
  "description": "It Hurts is a technical debt manager for development teams",
  "vendor": {
    "name": "Nikita Verkhovin / It Hurts",
    "url": "https://ithurts.dev"
  },
  "baseUrl": "https://ithurts.dev",
  "authentication": {
    "type": "jwt"
  },
  "lifecycle": {
    "installed": "/bitbucket/installed",
    "uninstalled": "/bitbucket/uninstalled"
  },
  "modules": {
    "webhooks": [
      {
        "event": "repo:updated",
        "url": "/bitbucket/webhook/repo/updated"
      },
      {
        "event": "repo:push",
        "url": "/bitbucket/webhook/repo/push"
      }
    ],
    "postInstallRedirect": {
      "key": "redirect",
      "url": "https://ithurts.dev/dashboard?sync=true"
    }
  },
  "scopes": [
    "account",
    "repository"
  ],
  "contexts": [
    "account"
  ]
}